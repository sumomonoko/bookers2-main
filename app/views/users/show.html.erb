<%= flash[:notice] %>

<div class="row">
  <div class="col-md-3">
    <%= render 'list', user: @user, book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to image_tag(book.user.get_profile_image, height: 80, width: 'auto'), user_path(book.user.id) %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>